---
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import '../styles/global.css';

interface Props {
  title?: string;
  description?: string;
}

const {
  title = 'Anais & Rayko - Our Wedding',
  description = 'Celebrating the love and union of Anais Garcia Peña and Rayko Azcue Pérez',
} = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content={description} />
    <meta name="generator" content={Astro.generator} />

    <!-- Open Graph / Social Media -->
    <meta property="og:type" content="website" />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />

    <!-- Favicons: SVG + PNG fallbacks + legacy ICO -->
    <link rel="icon" type="image/svg+xml" href="/icons/favicon-twinstars-classic.svg" />
    <link
      rel="icon"
      type="image/png"
      sizes="32x32"
      href="/icons/favicon-twinstars-classic-32.png"
    />
    <link rel="apple-touch-icon" sizes="180x180" href="/icons/favicon-twinstars-classic-180.png" />
    <link rel="shortcut icon" href="/favicon.ico" />
    <title>{title}</title>

    <style>
      body {
        position: relative;
        min-height: 100vh;
        background:
          radial-gradient(ellipse at top, #0a1628 0%, transparent 50%),
          radial-gradient(ellipse at bottom, #000814 0%, transparent 50%),
          linear-gradient(to bottom, #0a1628 0%, #0d1b2a 40%, #101b2d 60%, #000814 100%);
        background-attachment: fixed;
      }

      /* Create a canvas-like starry effect with multiple layers */
      body::before {
        content: '';
        position: fixed;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background-image: 
          /* Large bright stars */
          radial-gradient(circle at 20% 30%, white 1.5px, transparent 1.5px),
          radial-gradient(circle at 80% 20%, white 1.5px, transparent 1.5px),
          radial-gradient(circle at 40% 70%, white 1.5px, transparent 1.5px),
          radial-gradient(circle at 70% 80%, white 1.5px, transparent 1.5px),
          /* Medium stars */
            radial-gradient(circle at 10% 10%, rgba(255, 255, 255, 0.9) 1px, transparent 1px),
          radial-gradient(circle at 90% 40%, rgba(255, 255, 255, 0.9) 1px, transparent 1px),
          radial-gradient(circle at 50% 50%, rgba(255, 255, 255, 0.9) 1px, transparent 1px),
          radial-gradient(circle at 30% 90%, rgba(255, 255, 255, 0.9) 1px, transparent 1px),
          /* Small stars - dense layer */
            radial-gradient(circle at 15% 60%, rgba(255, 255, 255, 0.8) 0.5px, transparent 0.5px),
          radial-gradient(circle at 85% 65%, rgba(255, 255, 255, 0.8) 0.5px, transparent 0.5px),
          radial-gradient(circle at 45% 15%, rgba(255, 255, 255, 0.8) 0.5px, transparent 0.5px),
          radial-gradient(circle at 60% 45%, rgba(255, 255, 255, 0.8) 0.5px, transparent 0.5px),
          radial-gradient(circle at 25% 25%, rgba(255, 255, 255, 0.7) 0.5px, transparent 0.5px),
          radial-gradient(circle at 75% 75%, rgba(255, 255, 255, 0.7) 0.5px, transparent 0.5px),
          /* Tiny stars background */
            radial-gradient(circle, rgba(255, 255, 255, 0.6) 0.5px, transparent 0.5px),
          radial-gradient(circle, rgba(255, 255, 255, 0.5) 0.5px, transparent 0.5px);
        background-size:
          400px 400px,
          450px 450px,
          500px 500px,
          550px 550px,
          300px 300px,
          350px 350px,
          320px 320px,
          380px 380px,
          250px 250px,
          280px 280px,
          260px 260px,
          290px 290px,
          270px 270px,
          310px 310px,
          200px 200px,
          220px 220px;
        background-position:
          0 0,
          50px 50px,
          100px 25px,
          150px 75px,
          25px 100px,
          75px 125px,
          125px 50px,
          175px 150px,
          200px 0,
          225px 200px,
          250px 100px,
          275px 50px,
          300px 150px,
          325px 75px,
          0 50px,
          100px 100px;
        background-repeat: repeat;
        opacity: 1;
        z-index: 0;
        pointer-events: none;
        animation: twinkle 10s ease-in-out infinite;
      }

      @keyframes twinkle {
        0%,
        100% {
          opacity: 1;
        }
        50% {
          opacity: 0.75;
        }
      }

      /* Ensure content is above the starry background */
      header,
      main,
      footer {
        position: relative;
        z-index: 1;
      }
    </style>
  </head>
  <body>
    <Header />
    <main class="min-h-screen">
      <slot />
    </main>
    <Footer />
  </body>
</html>
